            $('#3').html(tampil.model);
            $('#4').html(formatCurrency(tampil.harga_terjual));
            $('#5').html(tampil.dealer);
            $('#6').html(tampil.status);
            $('#7').html(formatCurrency(tampil.harga_bayar));
            $('#8').html(formatCurrency(tampil.sisa_bayar));
            $('#9').html(formatCurrency(tampil.angsuran));
            $('#10').html(formatCurrency(tampil.total_bunga));
            $('#11').html(tampil.tenor);
            $('#12').html(tampil.tgl_pelunasan);
            $('#13').html(tampil.nik);
            $('#14').html(tampil.nama_pembeli);
            $('#15').html(tampil.no_telp);
            $('#16').html(tampil.alamat);
