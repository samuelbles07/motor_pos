<!-- views/login.ejs -->
<!doctype html>
<html>
<head>
	<title>ZAKY MOTOR</title>
	<link rel="stylesheet" href="assets/css/bootstrap.min.css"> <!-- load bootstrap css -->
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css"> <!-- load fontawesome -->
	<style>
		body 		{ padding-top:80px; }
	</style>
</head> 
<body>
    <div class="container">
        <div class="col-sm-6 col-sm-offset-3">
            <h1><span class="fa fa-sign-in"></span> Login</h1>

            <!-- show any messages that come back with authentication -->
            <% if (message.length > 0) { %>
                <div class="alert alert-danger"><%= message %></div>
            <% } %>

            <!-- LOGIN FORM -->
            <form action="/login" method="post">
                <div class="form-group">
                    <label>USERNAME</label>
                    <input type="text" class="form-control" name="username">
                </div>
                <div class="form-group">
                    <label>PASSWORD</label>
                    <input type="password" class="form-control" name="password">
                </div>
                <div class="form-group">
                <select class="form-control" name="dealer">
                    <option value="1">ZAKY MOTOR 1</option>
                    <option value="2">ZAKY MOTOR 2</option>
                    <option value="3">ZAKY MOTOR 3</option>
                </select>
                </div>
                

                <button type="submit" class="btn btn-warning btn-lg">Login</button>
            </form>
        </div>
    </div>
</body>
</html>
